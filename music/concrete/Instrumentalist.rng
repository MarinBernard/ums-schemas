<?xml version="1.0" encoding="UTF-8"?>
<grammar xmlns="http://relaxng.org/ns/structure/1.0">
	<define name="MCT_Instrumentalist">
		<element name="instrumentalist">
			<!-- This element might be used by reference -->
			<ref name="BAT_Referenceable"/>
			<!-- Inherited elements common to all persons -->
			<ref name="BAT_Person"/>
			<!-- Instruments played by the instrumentalist -->
			<optional>
				<ref name="MLT_Instruments"/>
			</optional>
		</element>
	</define>
</grammar>